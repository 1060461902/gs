<view>
  <text class='title'>我的收藏</text>
  <scroll-view 
    scroll-y
    class='scroll-style'>
    <view
      class='question'
      wx:for='{{items}}'
      wx:for-item="item"
      type='a'
      bindtap='tapMsg'
      bindtouchstart="mytouchstart"
      bindtouchend="mytouchend"
      data-i='{{index}}'
    >
      <view class='question-time'>{{item.time}}</view>
      <view class='question-message'>{{item.msg}}</view>
    </view>
  </scroll-view>
  <view class='bottom-btn-bar'>
    <button class='bottom-btn' bindtap='cleanAll'>一键清除我的收藏</button>
  </view>
</view>