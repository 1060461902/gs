.bottom-bar{
  padding:10px 5%;
  position:fixed;
  bottom:0;
  width:100%;
  background-color:#ffffff;
  border-top: 2rpx solid #eeeeee;
}

.as-item{
  position: relative;
  padding:10px 5% 10px 2%;
  color:#000000;
}

.ask-item{
  display: flex;
  flex-direction:row-reverse;
  position: relative;
  padding:10px 2% 10px 5%;
  color:#000000;
}

.as-head-part,
.ask-head-part{
  position: relative;
  vertical-align:top;
  width:15%;
  display: inline-block;
}

.ask-head-part{
  right: 0;
}

.as-content{
  position: relative;
  display: inline-block;
  max-width:75%;
  background-color:#ebebeb;
  padding:5px;
  border-radius:5px;
}

.ask-content{
  position: relative;
  align-self: baseline;
  right: 0;
  display: inline-block;
  max-width:75%;
  background-color:#53ff1e;
  padding:5px;
  border-radius:5px;
}

.as-conner{
  width:0;
  height:0;
  border-width:10px;
  border-style:dashed solid dashed dashed;
  font-size:0;
  line-height:0;
  border-color:transparent #ebebeb transparent transparent;
  position:absolute;
  transform:translateX(-20px);
}

.ask-conner{
  width:0;
  height:0;
  border-width:10px;
  border-style:dashed dashed dashed solid;
  font-size:0;
  line-height:0;
  border-color:transparent transparent transparent #53ff1e;
  position:absolute;
  right: 0;
  top: 5px;
  transform:translateX(15px);
}

.as-head,
.ask-head{
  width: 40px;
  height: 40px;
  border: 1px solid #e0e0e080;
  border-radius: 10%;
  position: relative;
  top: 0;
}

.ask-head{
  transform: translateX(10px);
}

.text-content{
  word-wrap:break-word;
}

.as-container{
  font-size: 15px;
  width: 100%;
}
